/* 页头与开关 */
.header {
  padding: 24rpx 24rpx 8rpx;
  display:flex; align-items:flex-end; justify-content:space-between; gap:24rpx;
}
.title-wrap .h2 { font-size:32rpx; font-weight:600; color:#0f172a; }
.title-wrap .sub { margin-top:6rpx; font-size:24rpx; color:#64748b; display:block; }
.toggle { display:flex; align-items:center; gap:12rpx; }
.toggle-label { font-size:24rpx; color:#334155; }

/* 骨架卡片（页面内自给自足，不依赖全局 .card） */
.skel-card {
  height:200rpx; margin: 0 24rpx 24rpx; border-radius:24rpx;
  border:1px solid #e2e8f0; background:#fff;
  box-shadow:0 2rpx 0 rgba(0,0,0,0.02);
  position:relative; overflow:hidden;
}
.skel-card::after {
  content:""; position:absolute; inset:0;
  background:linear-gradient(90deg,#f2f5f9 25%,#e9edf3 37%,#f2f5f9 63%);
  background-size:400% 100%; animation:skel 1.2s ease-in-out infinite;
}
@keyframes skel { 0%{background-position:100% 50%} 100%{background-position:0 50%} }

/* 状态区 */
.status { padding:120rpx 32rpx; text-align:center; }
.status .muted { color:#64748b; }
.err { color:#b91c1c; display:block; margin-bottom:24rpx; }
